{
    "name": "projectify",
    "displayName": "Projectify - Project Manager",
    "description": "Zero-configuration project manager for VS Code â€” organize, group, tag, bookmark, and quickly switch between projects, folders, and workspaces from the sidebar.",
    "version": "0.2.8",
    "license": "Elastic-2.0",
    "publisher": "DevEmbers",
    "icon": "resources/icons/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/devembers/projectify"
    },
    "homepage": "https://devembers.com",
    "qna": "marketplace",
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "bugs": {
        "url": "https://github.com/devembers/projectify/issues"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "project",
        "manager",
        "switcher",
        "workspace",
        "groups",
        "tags",
        "favorites",
        "ssh",
        "remote",
        "project-manager",
        "project-switcher",
        "project-organizer",
        "folder",
        "organizer",
        "sidebar",
        "productivity",
        "workflow",
        "bookmarks",
        "recent-projects",
        "quick-switch",
        "open-folder",
        "workspace-manager",
        "navigation",
        "monorepo",
        "multi-root"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "extensionDependencies": [],
    "contributes": {
        "commands": [
            {
                "command": "projectify.editStorageFile",
                "title": "Edit Projects File",
                "category": "Projectify",
                "icon": "$(edit)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "projectify",
                    "title": "Projectify",
                    "icon": "resources/icons/projectify.svg"
                }
            ]
        },
        "views": {
            "projectify": [
                {
                    "id": "projectifyView",
                    "name": "Projectify",
                    "type": "webview"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "projectify.editStorageFile",
                    "when": "view == projectifyView",
                    "group": "navigation@1"
                }
            ]
        },
        "keybindings": [
            {
                "command": "projectifyView.focus",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p"
            }
        ],
        "configuration": {
            "title": "Projectify",
            "properties": {
                "projectify.sortBy": {
                    "type": "string",
                    "enum": [
                        "name",
                        "recency"
                    ],
                    "default": "name",
                    "description": "How to sort projects."
                },
                "projectify.openBehavior": {
                    "type": "string",
                    "enum": [
                        "currentWindow",
                        "newWindow",
                        "ask"
                    ],
                    "default": "currentWindow",
                    "description": "Default behavior when opening a project."
                },
                "projectify.showStatusBar": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show current project in the status bar."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "node esbuild.js --production",
        "watch": "node esbuild.js --watch",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit",
        "test:unit": "vitest run",
        "test:watch": "vitest",
        "pretest:integration": "npm run build",
        "test:integration": "vscode-test",
        "package": "vsce package",
        "publish:marketplace": "vsce publish",
        "publish:ovsx": "ovsx publish projectify-$npm_package_version.vsix",
        "publish": "npm run package && npm run publish:marketplace && npm run publish:ovsx"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/react": "^19.2.13",
        "@types/react-dom": "^19.2.3",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.0",
        "@vscode/vsce": "^3.0.0",
        "esbuild": "^0.25.0",
        "eslint": "^8.57.0",
        "ovsx": "^0.10.9",
        "prettier": "^3.2.0",
        "typescript": "~5.5.0",
        "vitest": "^3.2.0"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.44",
        "react": "^19.2.4",
        "react-dom": "^19.2.4"
    }
}
